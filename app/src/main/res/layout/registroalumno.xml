<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:padding="4dip">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:padding="1dip">


            <ImageView
                android:id="@+id/imgFotoAlumno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/logolibertecsmall" />

            <TextView
                android:id="@+id/TVITEM_CODIGO_ALUMNO"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/TVITEM_NOMBRES_ALUMNO"
                android:layout_marginStart="220dip"
                android:layout_marginLeft="180dip"
                android:layout_marginTop="0dp"
                android:text="TVITEM_CODIGO_ALUMNO" />

            <TextView
                android:id="@+id/TVITEM_DNI_ALUMNO"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dip"
                android:layout_marginStart="60dip"
                android:layout_alignBaseline="@id/TVITEM_CODIGO_ALUMNO"
                android:layout_alignBottom="@id/TVITEM_NOMBRES_ALUMNO"
                android:text="TVITEM_DNI_ALUMNO"
                />

            <TextView
                android:id="@+id/TVITEM_NOMBRES_ALUMNO"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dip"
                android:layout_marginLeft="60dip"
                android:layout_marginTop="1dp"
                android:text="TVITEM_NOMBRES_ALUMNO" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>
